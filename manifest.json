{
  "manifest_version": 3,
  "name": "Meeting Transcriber",
  "version": "1.2",
  "description": "Captura transcrições de reuniões no Meet, Teams e Slack e envia para o chatbot.",
  "permissions": [
    "scripting",
    "storage",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "*://meet.google.com/*",
    "*://*.teams.microsoft.com/*",
    "*://teams.live.com/*",
    "*://*.slack.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://meet.google.com/*",
        "*://*.teams.microsoft.com/*",
        "*://teams.live.com/*",
        "*://*.slack.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Transcriber",
    "default_icon": {
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "viewer.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:* http://127.0.0.1:*"
  }
}
