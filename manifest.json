{
    "manifest_version": 3,
    "name": "Meeting Transcriber",
    "version": "1.0",
    "description": "Captura transcrições automaticamente em reuniões do Teams e Google Meet e salva em arquivo.",
    "permissions": [
      "downloads",
      "scripting",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "*://meet.google.com/*",
          "*://*.teams.microsoft.com/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "128": "icon.png"
    }
  }
  